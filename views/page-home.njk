{% extends "layout.njk" %}

{% block content %}

    <div class="content">

        <h1>As melhores receitas</h1>
        
        <p>Aprenda a construir os melhores pratos</p>
        <p>com receitas criadas por profissionais</p>
        <p>do mundo inteiro.</p>

        <img src="/assets/chef.png" alt="Chefe">

    </div>

    <h2>Mais acessadas</h2>

    <section class="cards">

        {% for receita in receitas %}

            <div class="card">

                <div class="card__image-container">

                    <img src="{{receita.image}}" alt="Imagem de {{receita.title}}">

                </div>

                <div class="card__content">
                    
                    <h3>{{receita.title}}</h3>
                    <p>{{receita.author}}</p>

                </div>

            </div>

        {% endfor %}
       
    </section>

{% endblock content %}
